<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.project.moneytablite">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".HelpUs" />
        <activity android:name=".visitUs" />
        <activity android:name=".TaskSwitch" />
        <activity android:name=".ViewPassbook" />
        <activity android:name=".About" />
        <activity android:name=".Register" />
        <activity
            android:name=".Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QueryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>